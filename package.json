{
  "scripts": {
    "build": "rimraf dist && webpack",
    "prettify": "eslint --fix src/ tests/ && elm-format --yes src/elm",
    "serve": "webpack-serve --config ./webpack.config.js --port 3000",
    "test": "jest --bail --coverage --detectOpenHandles --forceExit && elm-test"
  },
  "jest": {
    "roots": [
      "tests"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "tests/elm-stuff"
    ],
    "testRegex": "\\.js$",
    "moduleFileExtensions": [
      "js"
    ],
    "moduleNameMapper": {
      "\\.scss$": "identity-obj-proxy",
      "\\.elm$": "<rootDir>/mocks/elm.js"
    }
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "css-loader": "^1.0.0",
    "elm": "^0.18.0",
    "elm-format": "^0.6.1-alpha",
    "elm-test": "^0.18.12",
    "elm-webpack-loader": "^4.5.0",
    "eslint": "^5.2.0",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.4.2",
    "node-sass": "^4.9.2",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.21.0",
    "webpack": "^4.16.4",
    "webpack-cli": "^3.1.0",
    "webpack-serve": "^2.0.2"
  }
}
